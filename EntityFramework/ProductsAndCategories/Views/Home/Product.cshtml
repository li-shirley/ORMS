@{
ViewData["Title"] = "Product Page";
}

@model ProductCategory

<div class="container mx-auto w-75 p-5">

    <div class="d-flex justify-content-center mb-5">
        <h1 class="display-4">@ViewBag.ProductWithSelectedCategories.Name</h1>
    </div>

    <div class="row">

        <div class="col">
            <h3 class="text-center">Categories:</h3>
                <ul class="list-group">
                    @foreach (ProductCategory category in ViewBag.ProductWithSelectedCategories.ProductCategories)
                {
                    <li class="list-group-item"> @category.Category.Name</li>
                }
                </ul>
        </div>

        <div class="col text-center">
            <h3 class="text-center">Add Category:</h3>
            <form asp-controller="Home" asp-action="ProductAddCategory" asp-route-productId="@ViewBag.ProductWithSelectedCategories.ProductId" method="post">

                <div class="form-group">
                    <label class="form-label" asp-for="CategoryId"></label>
                    <select class="form-select" asp-for="CategoryId">
                    @foreach (Category category in ViewBag.UnselectedCategories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Add Category</button>
            </form>
        </div>

    </div>
</div>

