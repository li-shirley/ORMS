@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish> 

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
</div>
<div class="row">
    <div class="col-1">
    </div>
    <div class="col-7">
        <h3 class="border-bottom m-3">Check out some recent dishes!</h3>
        <div class="list-group m-3">
            @foreach (Dish dish in Model)
            {
                <p class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/dishes/@dish.DishId">@dish.Name</a> 
                    by @dish.ChefName
                </p>
            }
        </div>
    </div>
    <div class="col-3 m-3">
        <a href="/dishes/new">Add Dish</a>
    </div>
    <div class="col-1">
    </div>
</div>

