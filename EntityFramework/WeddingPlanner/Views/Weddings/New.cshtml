@{
    ViewData["Title"] = "Add Wedding Form";
}
@model Wedding

<div class="container mx-auto w-70 p-5">
        <form asp-controller="Weddings" asp-action="CreateWedding" method="post">

            <div class="form-group">
                <label class="form-label" asp-for="WedderOne"></label>
                <span asp-validation-for="WedderOne" class="text-danger"></span>
                <input class="form-control" asp-for="WedderOne">
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="WedderTwo"></label>
                <span asp-validation-for="WedderTwo" class="text-danger"></span>
                <input class="form-control" asp-for="WedderTwo">
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Date"></label>
                <span asp-validation-for="Date" class="text-danger"></span>
                <input class="form-control" asp-for="Date">
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
                <input class="form-control" asp-for="Address">
            </div>

            <button type="submit" class="btn btn-primary">Add Wedding</button>
        </form>
    </div>