@{
    ViewData["Title"] = "Home and Registration Page";
}

@model User

<div class="mx-auto w-50">
    <form asp-controller="Home" asp-action="Register" method="post">

        <h3 class="h3 mb-3 text-primary">Register to this Cool Site!</h3>

        <div class="form-group">
            <label class="form-label" asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input class="form-control" asp-for="FirstName">
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input class="form-control" asp-for="LastName">
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input class="form-control" asp-for="Email">
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input class="form-control" asp-for="Password">
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input class="form-control" asp-for="ConfirmPassword">
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>

    </form>
    <div class="text-center mt-3">
        <p>Already a member?</p>
        <a href="/login">Login!</a>
    </div>
</div>
