@{
    ViewData["Title"] = "Add Dish Form";
}
@model Dish

<div class="container mx-auto w-70 shadow p-5">
        <form asp-controller="Home" asp-action="CreateDish" method="post">

            <div class="form-group">
                <label class="form-label" asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input class="form-control" asp-for="Name">
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Calories"></label>
                <span asp-validation-for="Calories" class="text-danger"></span>
                <input class="form-control" asp-for="Calories">
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Tastiness"></label>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
                <select class="form-select" asp-for="Tastiness">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="ChefId"></label>
                <span asp-validation-for="ChefId" class="text-danger"></span>
                <select class="form-select" asp-for="ChefId">
                    @foreach (Chef chef in ViewBag.Chefs)
                    {
                        <option value="@chef.ChefId">@chef.FullName()</option>
                    }           
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Dish</button>
        </form>
    </div>